@model List<ContactModel>
@{
    ViewData["Title"] = "ListContact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        List of Contact
    </div>
    <div class="card-body">
        <a asp-action="AddContact" asp-controller="Maintener" class="btn btn-success"><i class="bi bi-plus-circle"></i> Create New</a>
        <hr />
        <table class="table table-bordered">  
            <thead>
                <tr>   @* fila *@
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Maintener" class="btn btn-primary btn-sm" asp-route-IdContact="@item.IdCotact"><i class="bi bi-pencil"></i> Edit</a>
                            <a asp-action="Delete" asp-controller="Maintener" class="btn btn-danger btn-sm" asp-route-IdContact="@item.IdCotact"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

